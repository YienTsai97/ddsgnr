---
import "../styles/global.css";
const text = "Book Your Appointment Now";
---

<div class="homeTop bg-black w-full relative">
    <img
        class="opacity-50 object-cover object-center w-full h-[575px] md:h-[900px]"
        src="home/homeTop.jpeg"
        alt=""
    />
    <div
        class="px-6 md:px-16 title-content w-full max-w-[1440px] h-auto absolute top-1/2 left-1/2 translate-x-[-50%] translate-y-[-50%]"
    >
        <div class="text-white w-[362px] md:w-[560px] flex flex-col gap-6">
            <p
                class="text-[40px]/[48px] font-bold md:text-[56px]/[67.2px] text-left"
            >
                Expert Car Care You Can Trust
            </p>
            <p class="text-[18px]/[27px] font-normal">
                Get Back on the Road Quickly with Ddsgnr, Expert Car Care You
                Can Trust,Expert Car Care You Can TrustExpert Car Care You Can
                TrustExpert Car Care You Can TrustExpert Car Care You Can Trust
            </p>
            <button
                type="button"
                class="w-fit text-black hover:text-white bg-white hover:bg-black border-[1px] border-white focus:outline-none transition-all duration-300 rounded-[5px] text-center px-6 py-3 text-[16px]/[24px] font-normal"
                >{text}
            </button>
        </div>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }
</style>
